{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
		"noImplicitThis": true,
		"strict": true,
		"strictNullChecks": true,
		"downlevelIteration": true,
		"allowJs": true,
		"module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"esModuleInterop": true,
		"lib": ["ES2020", "DOM"]
	},
	"include": ["src/"]
}
